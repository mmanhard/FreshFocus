{
  "name": "Fresh Focus",
  "version": "1.0",
  "description": "A simple chrome extension to improve focus using the Pomodoro Technique.",
  "manifest_version": 2,
  "browser_action": {
      "default_popup": "views/configure.html"
    },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"],
  "background" : {
    "scripts":  [
      "background.js"
    ]
  }
}
