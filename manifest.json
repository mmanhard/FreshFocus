{
  "name": "Fresh Focus",
  "version": "1.0",
  "description": "A simple chrome extension to improve focus using the Pomodoro Technique.",
  "manifest_version": 2,
  "browser_action": {
      "default_popup": "views/configure.html"
    },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"],
  "background" : {
    "scripts":  [
      "background.js"
    ]
  },
  "icons": {"16": "assets/logo-16.png",
            "24": "assets/logo-24.png",
            "32": "assets/logo-32.png",
            "48": "assets/logo-48.png",
            "128": "assets/logo-128.png" }
}
